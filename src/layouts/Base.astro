        { "@type": "Offer", "itemOffered": { "@type": "Service", "name": "Web Scraping & Data Extraction", "description": "Custom scrapers, data pipelines, monitoring" }},
        { "@type": "Offer", "itemOffered": { "@type": "Service", "name": "Custom Automation", "description": "Workflow automation, API integrations, cron jobs" }}
      ]
    }
  })} />
</head>

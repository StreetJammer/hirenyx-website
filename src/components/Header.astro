---
const currentPath = Astro.url.pathname;
const links = [
  { href: '/', label: 'Home' },
  { href: '/services', label: 'Services' },
  { href: '/about', label: 'About' },
];
---

<nav class="fixed top-0 w-full z-50 bg-nyx-900/80 backdrop-blur-xl border-b border-white/5">
  <div class="max-w-6xl mx-auto px-4 sm:px-6 lg:px-8">
    <div class="flex items-center justify-between h-16">
      <a href="/" class="flex items-center gap-2 group">
        <span class="text-2xl group-hover:animate-bounce transition-transform">ü¶ù</span>
        <span class="text-xl font-bold bg-gradient-to-r from-accent-purple to-accent-glow bg-clip-text text-transparent">Nyx</span>
      </a>
      
      <div class="hidden md:flex items-center gap-8">
        {links.map(l => (
          <a href={l.href} class:list={[
            "text-sm transition-colors relative after:absolute after:bottom-[-4px] after:left-0 after:h-[2px] after:bg-accent-purple after:transition-all after:duration-300",
            currentPath === l.href ? "text-white after:w-full" : "text-gray-400 hover:text-white after:w-0 hover:after:w-full"
          ]}>
            {l.label}
          </a>
        ))}
        <a href="/contact" class="px-4 py-2 bg-accent-purple hover:bg-accent-violet text-white text-sm font-medium rounded-lg transition-all hover:shadow-lg hover:shadow-accent-purple/25 hover:-translate-y-0.5 active:translate-y-0">
          Hire Nyx
        </a>
      </div>
      
      <button id="mobile-toggle" class="md:hidden text-gray-400 hover:text-white transition-colors" aria-label="Toggle menu">
        <svg id="menu-open" class="w-6 h-6" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 6h16M4 12h16M4 18h16" />
        </svg>
        <svg id="menu-close" class="w-6 h-6 hidden" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M6 18L18 6M6 6l12 12" />
        </svg>
      </button>
    </div>
  </div>
  
  <div id="mobile-menu" class="hidden md:hidden border-t border-white/5 bg-nyx-900/95 backdrop-blur-xl">
    <div class="px-4 py-4 space-y-3">
      {links.map(l => (
        <a href={l.href} class:list={[
          "block py-2 transition-colors",
          currentPath === l.href ? "text-white" : "text-gray-400 hover:text-white"
        ]}>{l.label}</a>
      ))}
      <a href="/contact" class="block px-4 py-2 bg-accent-purple text-white text-center rounded-lg hover:bg-accent-violet transition-colors">Hire Nyx</a>
    </div>
  </div>
</nav>

<script>
  const toggle = document.getElementById('mobile-toggle');
  const menu = document.getElementById('mobile-menu');
  const openIcon = document.getElementById('menu-open');
  const closeIcon = document.getElementById('menu-close');
  toggle?.addEventListener('click', () => {
    menu?.classList.toggle('hidden');
    openIcon?.classList.toggle('hidden');
    closeIcon?.classList.toggle('hidden');
  });
</script>
